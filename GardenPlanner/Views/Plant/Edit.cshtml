@model GardenPlanner.Models.Plant
@{
    ViewData["Title"] = "Ny planta";
   
}

<h3 class="display-3 text-center">Edit</h3>
<div class="container" style="max-width: 550px;">

    <form asp-action="EditPlant" asp-route-id="@Model.Id" method="post">
    

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input type="text" class="form-control" asp-for="Name">
            <span asp-validation-for="Name" class="form-text"></span>
        </div>
        <div class="mb-5">
            <label asp-for="Month" class="form-label"></label>
            <select class="form-control" asp-for="Month">
                <option value="1">Januari</option>
                <option value="2">Februari</option>
                <option value="3">Mars</option>
                <option value="4">April</option>
                <option value="5">Maj</option>
                <option value="6">Juni</option>
                <option value="7">Juli</option>
                <option value="8">Augusti</option>
                <option value="9">September</option>
                <option value="10">Oktober</option>
                <option value="11">November</option>
                <option value="12">December</option>
            </select>
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" asp-for="Eatable">
            <label class="form-check-label" asp-for="Eatable">Ätbar</label>
        </div>
        <div class="mb-5 form-check">
            <input type="checkbox" class="form-check-input" asp-for="Decorative">
            <label class="form-check-label" asp-for="Decorative">Blomma</label>
        </div>

        <div class="mb-5">
            <label class="form-label">Vart ska den odlas?</label>

            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="Greenhouse" id="Greenhouse" value="true">
                <label class="form-check-label" for="Greenhouse">
                    Växthus
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="Greenhouse" id="Outside" value="false">
                <label class="form-check-label" for="Outside">
                    Plantera ute
                </label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Spara</button>

    </form>


</div>


@model List<ListPlant>
@{
    ViewData["Title"] = "Alla plantor";

}
<h3 class="display-3 text-center">Alla växter</h3>





<div>
    <table class="table">
        <thead>
            <tr>
                <th>Namn</th>
                <th>Månad</th>
                <th>Ätbar</th>
                <th>Blomma</th>
                <th>Odlingsplats</th>
                <th></th>
                <th></th>

            </tr>
                    <form asp-action="Search" asp-asp-controller="Plant" method="get">
            <tr>
                <td>
                    Filter val
                </td>

                <td>
                    
                    <select class="form-control" name="Month">
                        <option value="0">Alla</option>
                        <option value="1">Januari</option>
                        <option value="2">Februari</option>
                        <option value="3">Mars</option>
                        <option value="4">April</option>
                        <option value="5">Maj</option>
                        <option value="6">Juni</option>
                        <option value="7">Juli</option>
                        <option value="8">Augusti</option>
                        <option value="9">September</option>
                        <option value="10">Oktober</option>
                        <option value="11">November</option>
                        <option value="12">December</option>
                    </select>
                </td>
                <td>
                    @*<div class="mb-3 form-check">*@
                        <input type="checkbox" class="form-check-input" name="Eatable" value="true">
                        <label class="form-check-label" for="Eatable">Ätbar</label>
                    @*</div>*@
                </td>
                <td>
                    @*<div class="mb-5 form-check">*@
                        <input type="checkbox" class="form-check-input" name="Decorative" value="true">
                        <label class="form-check-label" for="Decorative">Blomma</label>
                    @*</div>*@
                </td>
                <td>
                    @*<div class="mb-5">*@
                        

                        @*<div class="form-check">*@
                    <input class="form-check-input" type="checkbox" name="Greenhouse" value="true">
                    <label class="form-check-label" for="Greenhouse" style="margin-right: 5px">
                                Växthus
                            </label>
                    @*    </div>
                        <div class="form-check">*@
                    <input class="form-check-input" type="checkbox" name="Greenhouse" value="false">
                            <label class="form-check-label" for="Outside">
                                Utomhus
                            </label>
                            
                  @*      </div>
                    </div>*@
                </td>
                <th>

                </th>
                <td>
                    <button type="submit" class="btn btn-primary">Filtrera</button>
                </td>
                
            </tr>
            </form>
        </thead>
        <tbody>
        <div class="mb-5">
            <label for="Month" class="form-label"></label>
            
        </div>
            @foreach (var item in Model)
            {
                <form asp-controller="Plant" asp-route-id="@item.Id" asp-action="Delete">
                <tr>

                    <td>
                            @item.Name
                    </td>
                    <td>
                            @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.MonthNames[item.Month - 1].ToCapitalized()
                    </td>
                    <td>
                            @(item.Eatable ? "Ja" : "Nej")
                    </td>
                    <td>
                            @(item.Decorative ? "Ja" : "Nej")
                    </td>
                    <td>
                            @(item.Greenhouse ? "Växthus" : "Utomhus")

                    </td>
                    <td>
                        <a class="btn" asp-controller="Plant" asp-route-id="@item.Id" asp-action="Edit">Ändra</a>
                    </td>
                    <td>
                        <button class="btn" type="submit">Ta bort</button>
                    </td>
                </tr>
                </form>
            }
        </tbody>
    </table>
</div>